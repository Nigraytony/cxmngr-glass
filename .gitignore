/dist/
**/dist/
/build/
/out/
/.cache/
**/.cache/
/.tmp/
/.temp/
/.vite/
**/.vite/
/.parcel-cache/
**/.parcel-cache/
/.turbo/
**/.turbo/
/.nuxt/
**/.nuxt/
/.next/
**/.next/
